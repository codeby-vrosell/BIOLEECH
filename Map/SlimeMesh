// ============================================================
// Readme of SlimeMesh
// ============================================================ 

// ============================================================
// Description 
// ============================================================ 

This script manages individual slime meshes that can be cleaned by the playerâ€™s Slime Gun.  
It handles vertex sinking and settling to simulate cleaning and suction effects in a visually responsive way.  

// ============================================================
// Responsibilities
// ============================================================  

- Initializes mesh vertices and collider references.  
- Waits for player and SlimeWeaponController references before registration.  
- Handles suction of vertices based on the aiming point and clean range.  
- Applies vertex sinking and settling to create smooth cleaning animations.  
- Updates mesh and collider data after vertices are modified.  
- Provides a utility to calculate the number of vertices currently being sucked for gameplay logic.  

// ============================================================
// End of readme
// ============================================================  



using System.Linq;
using UnityEngine;

public class SlimeMesh : MonoBehaviour {

    // ============================================================
    // Mesh Configuration
    // ============================================================

    public float sinkingSpeed;
    [SerializeField] private float settlingTime = 0.5f;
    [SerializeField] private float settlingSpeed = 0.5f;

    // ============================================================
    // Mesh Data
    // ============================================================

    private float cleanRange;
    private Vector3[] vertices;
    private MeshCollider meshCollider;
    private Mesh mesh;

    // ============================================================
    // References
    // ============================================================

    private UpgradesController upgradesControllerScript;
    private SlimeWeaponController slimeWeaponControllerScript;

    // ============================================================
    // State Tracking
    // ============================================================

    private float timeSinceLastClean = 0f;
    private bool wasSuckedRecently = false;

    // ============================================================
    // Unity Lifecycle
    // ============================================================

    private void Start() {

        mesh = GetComponent<MeshFilter>().mesh;
        vertices = mesh.vertices;
        meshCollider = GetComponent<MeshCollider>();

        StartCoroutine(waitForReferences());

    }

    private System.Collections.IEnumerator waitForReferences() {

        // Wait until player and Weapon controller exist
        while (upgradesControllerScript == null || slimeWeaponControllerScript == null) {

            GameObject playerObj = GameObject.FindWithTag("Player");

            if (playerObj != null && upgradesControllerScript == null) {

                upgradesControllerScript = playerObj.GetComponent<UpgradesController>();

            }

            slimeWeaponControllerScript = Object.FindFirstObjectByType<SlimeWeaponController>();

            yield return null;

        }

        // Register this mesh in the Weapon controller
        slimeWeaponControllerScript.registerSlimeMesh(this);

    }

    private void Update() {

        if (!wasSuckedRecently || upgradesControllerScript == null || slimeWeaponControllerScript == null) {

            return;

        }

        timeSinceLastClean = timeSinceLastClean + Time.deltaTime;

        if (timeSinceLastClean < settlingTime) {

            settleVertices(Time.deltaTime);

        }

        else {

            wasSuckedRecently = false;

        }
    }

    // ============================================================
    // Cleaning Logic
    // ============================================================

    public void cleanMesh(Vector3 aimingPoint, float deltaTime) {

        if (upgradesController == null) {

            return;

        }

        cleanRange = upgradesController.cleanRangeUpgrade;
        bool hasChanges = false;

        for (int i = 0; i < vertices.Length; i++) {

            Vector3 vertexWorldPosition = transform.TransformPoint(vertices[i]);
            float distance = Vector3.Distance(aimingPoint, vertexWorldPosition);

            if (distance < cleanRange) {

                float ratio = 1f - (distance / cleanRange);
                float speed = sinkingSpeed * ratio;

                sinkVertex(i, speed * deltaTime);
                hasChanges = true;

            }
        }

        if (hasChanges) {

            mesh.vertices = vertices;
            mesh.RecalculateNormals();
            meshCollider.sharedMesh = mesh;

        }

        timeSinceLastClean = 0f;
        wasSuckedRecently = true;

    }

    // ============================================================
    // Vertex Manipulation
    // ============================================================

    private void sinkVertex(int index, float amount) {

        Vector3 worldPos = transform.TransformPoint(vertices[index]);
        worldPos = worldPos + (Vector3.down * amount);
        vertices[index] = transform.InverseTransformPoint(worldPos);

    }

    private void settleVertices(float deltaTime) {

        bool hasChanges = false;
        Vector3 aimingPoint = slimeWeaponControllerScript.getAimingPoint();

        for (int i = 0; i < vertices.Length; i++) {

            Vector3 vertexWorldPosition = transform.TransformPoint(vertices[i]);
            float distance = Vector3.Distance(aimingPoint, vertexWorldPosition);

            if (distance < cleanRange) {

                float ratio = 1f - (distance / cleanRange);
                float speed = settlingSpeed * ratio;

                sinkVertex(i, speed * deltaTime);
                hasChanges = true;

            }
        }

        if (hasChanges) {

            mesh.vertices = vertices;
            mesh.RecalculateNormals();
            meshCollider.sharedMesh = mesh;

        }
    }

    // ============================================================
    // Utility
    // ============================================================

    public int getSuckedVertices() {

        if (slimeWeaponController == null || slimeWeaponController.playerCamera == null) {

            return 0;

        }

        int count = 0;
        Vector3 aimingPoint = slimeWeaponController.getAimingPoint();

        foreach (Vector3 vertex in vertices) {

            Vector3 vertexWorldPosition = transform.TransformPoint(vertex);

            if (Vector3.Distance(aimingPoint, vertexWorldPosition) < cleanRange) {

                count = count + 1;

            }
                
        }

        return count;

    }
}
